# print each employee record
for emp in employee:
    row ='| ' + ' | '.join([employee[header.lower().replace('','_')].ljust(col_widths[header]) for headers in headers]) + ' |' 
    print(row)

print(separator)

def update_emp(Id,Name,salary,city,Mob_no,Email_Id,P_date,A_date):
    data=read_csv()
    for emp in data: 
     if emp['Id']==Id:
      if Name:
       emp['Name']=Name
       if salary:
        emp['salary']=salary
       if city:
        emp['city']=city
       if Mob_no:
        emp['mob_no']=Mob_no
       if Email_Id:
        emp['Email_Id']=Email_Id
       if P_date:
        emp['P_date']=P_date
       if A_date:
        emp['A_date']=A_date
      break
    write_csv(data)         

def delete_emp(Id):
 data=read_csv()
 data=[emp for emp in data if emp['Id'] != Id]
 write_csv(data)                    
           
          




def main():
    while True:
        print("\nEmployee Management System")
        print("1.Create Employee")
        print("2.Read Employee")
        print("3.Update Employee")
        print("4.Delete Employee")
        print("5.Exit")

        choice=input("Enter Your Choice=")

        if choice =='1':
            Id=input("Enter The ID=")
            Name=input("Enter The Name=")
            Salary=input("Enter The Salary=")
            City=input("Enter The City=")
            Mob_no=input("Enter The Mobile No=")
            Email_Id=input("Enter The Email ID=")
            P_date=input("Enter The Present Date=")
            A_date=input("Enter The Absent Date=")
            create_emp(Id,Name,Salary,City,Mob_no,Email_Id,P_date,A_date)

        elif choice == '2':
            read_emp()
        elif choice == '3':
            Id=input("Enter The ID To Update:")
            Name=input("Enter The Name(Leave Blank To Skip):")
            Salary=input("Enter The salary to Update(Leave Blank To Skip:)")
            City=input("Enter The City To Update(Leave Blank To Skip:)")
            Mob_no=input("Enter The Mobile No To Update(Leave Blank To Skip:)")
            Email_Id=input("Enter The Email ID To Update(Leave Blank To Skip:)")
            P_date=input("Enter The Present Date To Update(Leave Blank To Skip:)")
            A_date=input("Enter The Absent Date to Update(Leave Blank To Skip:)")
            update_emp(Id,Name or None,Salary or None,City or None,Mob_no or None,Email_Id or None,P_date or None,A_date or None)

        elif choice == '4':
            Id=input("Enter The Id To Delete:")
            delete_emp(Id)
            
        elif choice == '5':
            break 
        else:
            print("Invalid Choice.Please try again.")   

if __name__=="__main__":
    main()            

