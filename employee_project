import csv
CSV_FILE='data/employees.csv'

def read_csv():
    with open(CSV_FILE,mode='r',newline='')as file:
        reader=csv.DictReader(file)
        return list(reader)

def write_csv(data):
    with open(CSV_FILE,mode='w',newline='')as file:
        writer =csv.DictWriter(file,fieldnames=['ID','Name','Salary','City','Mob_no','Email_Id','P_date','A_date'])
        writer.writeheader()
        writer.writerows(data)

def create_emp(Id,Name,Salary,City,Mob_no,Email_Id,P_date,A_date):
    data=read_csv()
    new_emp={'Id': Id,'Name': Name,'Salary': Salary,'City': City,'Mob_no': Mob_no,'Email_Id': Email_Id,'P_date': P_date,'A_date': A_date}
    data.append(new_emp)
    write_csv(data)

def read_emp():
    emp=read_csv()
    if not emp:
        print("no employee data found")
        return

# determine the maximum width for each column
headers=['ID','Name','Salary','City','Mob_no','Email_Id','P_date','A_date']
col_widths={header: len(header) for header in headers}

